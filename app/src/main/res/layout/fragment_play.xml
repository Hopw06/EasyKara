<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".view.fragments.playscreen.PlayScreenFragment">

    <com.masoudss.lib.WaveformSeekBar
        android:id="@+id/waveForm"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:wave_progress="0"
        app:wave_max_progress="100"
        app:wave_width="5dp"
        app:wave_gap="2dp"
        app:wave_min_height="5dp"
        app:wave_corner_radius="2dp"
        app:wave_background_color="@color/blue"
        app:wave_progress_color="@color/yellow"
        app:wave_gravity="center"
        app:wave_padding_top="2dp"
        app:wave_padding_Bottom="2dp"
        app:wave_padding_right="2dp"
        app:wave_padding_left="2dp"
        app:marker_color="@color/red"
        app:marker_width="1dp"
        app:marker_text_color="@color/purple_200"
        app:marker_text_padding="2dp"
        app:marker_text_size="12dp"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/playSample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Play"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"/>
</LinearLayout>